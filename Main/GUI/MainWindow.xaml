<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"  Loaded="Window_Loaded" WindowState="Maximized">
    <DockPanel>
        <Menu Height="24" DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Name="OpenFile" Header="Open File ..." Click="OpenFile_Click" />
                <MenuItem Header="Exit" />
            </MenuItem>
            <MenuItem Header="Edit"></MenuItem>
        </Menu>
        <TreeView DockPanel.Dock="Right" Width="400"></TreeView>
        <WindowsFormsHost DockPanel.Dock="Left"  Name="host" />
    </DockPanel>

</Window>
